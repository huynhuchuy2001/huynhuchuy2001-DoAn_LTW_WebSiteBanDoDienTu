@using DealineMVC.Models
@model IEnumerable<SanPham>

@{
    ViewBag.Title = "SanPham";
    Layout = "~/Views/Playout/ProductLayout.cshtml";
}

<div class="col-md-9 product1">
    <div class=" bottom-product">
        @foreach (var item in Model.OrderBy(n => n.DonGia))
        {
            <div class="col-md-4 bottom-cd simpleCart_shelfItem">
                <div class="product-at ">
                    <a href="single.html">
                        <img class="img-responsive" src="@Url.Content("~/Content/HinhSP/" + item.HinhAnh)" alt="" style="width:200px;height:200px">
                        <div class="pro-grid">
                            <span class="buy-in">Đặt mua</span>
                        </div>
                    </a>
                </div>
                <p class="tun">@item.TenSP</p>
                <a href="#" class="item_add"><p class="number item_price"><i> </i>@item.DonGia.Value.ToString("#,##")</p></a>
            </div>


        }
        <div class="clearfix"> </div>
    </div>

</div>

